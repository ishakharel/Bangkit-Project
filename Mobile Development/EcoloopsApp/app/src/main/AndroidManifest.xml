            android:name=".ui.page.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.page.profile.EditPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.page.profile.HistoryScanActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
